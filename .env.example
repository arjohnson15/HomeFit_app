# ===========================================
# HomeFit Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ----- Application -----
NODE_ENV=development
APP_NAME=HomeFit
APP_VERSION=0.1.0
PORT=3000

# ----- Database (PostgreSQL) -----
DATABASE_URL="postgresql://homefit:homefit_dev_password@localhost:5432/homefit_db?schema=public"
POSTGRES_USER=homefit
POSTGRES_PASSWORD=homefit_dev_password
POSTGRES_DB=homefit_db

# ----- Authentication -----
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# ----- Session -----
SESSION_SECRET=your-session-secret-change-this

# ----- GitHub Auto-Update -----
GITHUB_REPO=arjohnson15/HomeFit_app
GITHUB_BRANCH=main
AUTO_UPDATE_ENABLED=true
AUTO_UPDATE_CHECK_INTERVAL=3600000

# ----- SMTP Email Configuration -----
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="HomeFit <noreply@homefit.app>"

# ----- SMS via Verizon Email Gateway -----
# Format: phonenumber@vtext.com for Verizon
SMS_ENABLED=false
SMS_GATEWAY=vtext.com

# ----- OpenAI (User provides their own key in settings) -----
# This is a fallback/default - users set their own in the app
OPENAI_API_KEY=

# ----- Frontend URL (for CORS) -----
CLIENT_URL=http://localhost:5173

# ----- Redis (for sessions/caching - optional) -----
REDIS_URL=redis://localhost:6379

# ----- File Upload -----
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# ----- Logging -----
LOG_LEVEL=debug
