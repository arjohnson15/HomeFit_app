# HomeFit Production Environment Configuration
# Copy this file to .env and fill in the values

# ===========================================
# VERSION (auto-updated by deploy script)
# ===========================================
APP_VERSION=1.0.0

# ===========================================
# DATABASE
# ===========================================
POSTGRES_USER=homefit
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
POSTGRES_DB=homefit

# ===========================================
# SECURITY (REQUIRED - Generate strong secrets!)
# Generate with: openssl rand -base64 32
# ===========================================
JWT_SECRET=CHANGE_THIS_GENERATE_A_STRONG_SECRET
SESSION_SECRET=CHANGE_THIS_GENERATE_ANOTHER_SECRET

# ===========================================
# NETWORKING
# ===========================================
# Port to expose on host machine
HOST_PORT=3000

# Client URL (for CORS and email links)
# Set this to your actual domain in production
CLIENT_URL=http://localhost:3000

# ===========================================
# VERSION CONTROL & UPDATES
# ===========================================
GITHUB_REPO=arjohnson15/HomeFit_app
GITHUB_BRANCH=main

# ===========================================
# EMAIL CONFIGURATION (Optional)
# Required for password reset and notifications
# ===========================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# ===========================================
# BACKUP SETTINGS (Optional)
# ===========================================
# Backup retention in days
BACKUP_RETENTION_DAYS=30
